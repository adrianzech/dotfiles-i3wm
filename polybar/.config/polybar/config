[colors]
transparent = #00000000
background = #131B26
foreground = #F3F4F5
inactive-text = #818D92
accent = #2196f3
alert = #C44444

[bar/master]
monitor = ${env:MONITOR}
width = 100%
height = 32
background = ${colors.transparent}
foreground = ${colors.foreground}
font-0 = "DejaVu Sans:pixelsize=12:antialias=true;1"
font-1 = "FontAwesome:pixelsize=12:antialias=true;1"

[bar/top]
inherit = bar/master
modules-left = i3 spotify-previous spotify-playpause spotify-next spotify
modules-right = volume date time

border-top-size = 5
border-left-size = 0
border-right-size = 20

module-margin-left = 0
module-margin-right = 0
padding-left = 0
padding-right = 0

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = false
strip-wsnumbers = true
pin-workspaces = true

format-background = ${colors.background}

label-visible-background = ${colors.background}
label-visible-foreground = ${colors.inactive-text}
label-visible-padding = 4

label-focused-background = ${colors.accent}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 4

label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.inactive-text}
label-unfocused-padding = 4

label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 4

format-margin = 4

[module/time]
type = internal/date
interval = 40
label = %time%
time = %H:%M
format-padding = 5
format-background = ${colors.accent}

[module/date]
type = internal/date
interval = 1200
label = %date%
date = %A, %d %B
format-padding = 5
format-background = ${colors.background}

[module/powermenu]
type = custom/menu
label-open = "System"
label-open-font = 4
label-close = "Close"
label-separator = " - "

menu-0-0 = "Reboot"
menu-0-0-exec = systemctl reboot
menu-0-1 = "Shutdown"
menu-0-1-exec = systemctl poweroff

format-padding = 5
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-margin = 4

[module/volume]
type = internal/pulseaudio
label-volume =  %percentage%%
format-volume-padding = 5
format-volume-background = ${colors.background}
format-volume-foreground = ${colors.foreground}
format-volume-margin = 0

[module/cpu]
type = internal/cpu
label = cpu %percentage%%
format-padding = 5
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-margin = 0

[module/memory]
type = internal/memory
label = ram %gb_used%
format-padding = 5
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-margin = 0

[module/spotify]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/spotify.sh
format-padding = 5
format-background = ${colors.background}

[module/spotify-playpause]
type = custom/script
interval = 0
exec = ~/.config/polybar/scripts/spotify-playpause.sh
click-left = playerctl play-pause
format-padding = 3
format-background = ${colors.accent}

[module/spotify-previous]
type = custom/script
exec = echo ""
click-left = playerctl previous
format-padding = 3
format-background = ${colors.accent}

[module/spotify-next]
type = custom/script
exec = echo ""
click-left = playerctl next
format-padding = 3
format-background = ${colors.accent}

vim:ft=dosini
